<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NcfDesktopApp.GUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NcfDesktopApp.GUI.Views.SettingsView"
             x:DataType="vm:MainWindowViewModel">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="20" MaxWidth="600">

            <!-- 顶部导航栏 -->
            <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="8" Padding="15">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <TextBlock Grid.Column="0" 
                               Text="⚙️ NCF 设置中心" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="2" 
                            Content="🌐 打开浏览器" 
                            Command="{Binding SwitchToBrowserCommand}"
                            IsEnabled="{Binding IsBrowserReady}"
                            Padding="15,8"/>
                </Grid>
            </Border>

            <!-- 状态信息卡片 -->
            <Border Classes="card">
                <StackPanel>
                    <TextBlock Text="状态信息" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="120,*" 
                          VerticalAlignment="Top">
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="运行平台:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PlatformInfo}" Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="最新版本:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LatestVersion}" Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="当前状态:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                            <Border Background="{Binding StatusColor}" CornerRadius="8" Width="16" Height="16"/>
                            <TextBlock Text="{Binding CurrentStatus}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="站点地址:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SiteUrl}" FontFamily="Consolas"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 操作进度卡片 -->
            <Border Classes="card">
                <StackPanel>
                    <TextBlock Text="操作进度" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <StackPanel Spacing="10">
                        <TextBlock Text="{Binding ProgressText}" FontWeight="SemiBold"/>
                        <ProgressBar Value="{Binding ProgressValue}" 
                                     IsIndeterminate="{Binding IsProgressIndeterminate}" 
                                     Height="8" 
                                     CornerRadius="4"/>
                    </StackPanel>
                    
                    <Separator Margin="0,15"/>
                    
                    <TextBlock Text="操作日志:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Border Background="#F8F9FA" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Height="150">
                        <ScrollViewer Name="LogScrollViewer" 
                                      Padding="10" 
                                      VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding LogText}" 
                                       FontFamily="Consolas" 
                                       FontSize="11" 
                                       TextWrapping="Wrap" 
                                       Background="Transparent"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>

            <!-- 配置选项卡片 -->
            <Border Classes="card">
                <StackPanel>
                    <TextBlock Text="配置选项" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <StackPanel Spacing="5">
                        <CheckBox Content="自动在内置浏览器中打开" IsChecked="{Binding AutoOpenBrowser}"/>
                        <CheckBox Content="自动清理下载文件" IsChecked="{Binding AutoCleanDownloads}"/>
                        <CheckBox Content="检查更新时显示详细信息" IsChecked="{Binding ShowDetailedInfo}"/>
                        <CheckBox Content="最小化到系统托盘" IsChecked="{Binding MinimizeToTray}"/>
                    </StackPanel>
                    
                    <Separator Margin="0,15"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="端口范围:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <NumericUpDown Value="{Binding StartPort}" Minimum="1024" Maximum="65535" Width="100"/>
                        <TextBlock Text="到" VerticalAlignment="Center"/>
                        <NumericUpDown Value="{Binding EndPort}" Minimum="1024" Maximum="65535" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 操作按钮 -->
            <StackPanel Orientation="Horizontal" 
                        Spacing="10" 
                        HorizontalAlignment="Center">
                <Button Content="测试连接" 
                        Command="{Binding TestConnectionCommand}" 
                        Padding="20,10"/>
                <Button Content="打开配置目录" 
                        Command="{Binding OpenConfigDirectoryCommand}" 
                        Padding="20,10"/>
                <Button Content="{Binding MainButtonText}" 
                        Command="{Binding MainOperationCommand}" 
                        Padding="20,10"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

    <UserControl.Styles>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BoxShadow" Value="0 2 4 0 #1A000000"/>
        </Style>
    </UserControl.Styles>
</UserControl> 